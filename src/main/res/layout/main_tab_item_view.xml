<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab_item_background"
 >

    <ImageView
        android:id="@+id/iv_main_tab_item_imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:id="@+id/tv_main_tab_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_main_tab_item_imageView"
        android:layout_alignRight="@+id/iv_main_tab_item_imageView"
        android:layout_alignBottom="@+id/iv_main_tab_item_imageView"
        android:layout_alignTop="@+id/iv_main_tab_item_imageView" />
</RelativeLayout>