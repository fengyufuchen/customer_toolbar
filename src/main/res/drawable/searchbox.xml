<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
        <color android:color="@color/press_searchbox"></color>


    </item>
    <item android:state_selected="true">
        <shape android:color="@android:color/transparent" android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
        <color android:color="@color/selected_seachbox"></color>

    </item>
    <item android:state_selected="false">
        <shape android:color="@android:color/transparent" android:shape="rectangle">
            <solid android:color="@android:color/transparent" />

        </shape>
        <color android:color="@color/normal_searchbox"></color>
    </item>
</selector>